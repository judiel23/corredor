    <%= f.input :codmodelo, as: :select, collection: [], :prompt => "Seleccione...", input_html: { class: "form-control" } %>
    <%= f.input :codversion,as: :select, collection: [], :prompt => "Seleccione...", input_html: { class: "form-control" } %>
    <%= f.input :codinter, :placeholder => "Ej.: 020661", input_html: { class: "form-control", value: "026206"} %>
