    <%= f.input :desnombre, input_html: { class: "form-control", value: "Nombre de Prueba" } %>
    <%= f.input :desapellido, input_html: { class: "form-control", value: "Apellido de Prueba" } %>
    <%= f.input :rif, input_html: { class: "form-control", value: "18621606" } %>
    <%= f.input :codarealocal %>
    <%= f.input :numtelefonolocal %>
