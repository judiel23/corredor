<p id="notice"><%= notice %></p>

<h1>Listing Vehicles</h1>

<div class="media">
  <div class="media-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Make</th>
            <th>Code</th>
            <th>Model</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @vehicles.each do |vehicle| %>
            <tr>
              <td><%= vehicle.make %></td>
              <td><%= vehicle.code %></td>
              <td><%= vehicle.model %></td>
              <td><%= link_to 'Show', vehicle %></td>
              <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
              <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<br>

<%= form_tag import_vehicles_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Vehicles" %>
<% end %>

<%= link_to 'New Vehicle', new_vehicle_path %>
