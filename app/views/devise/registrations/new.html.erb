<div class="authform col-md-12 text-center">
  <div class="panel-heading">
    <h2>Registrarse</h2>
  </div>  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, :class => "control-label col-sm-3 without_border" %>
      <div class="col-md-7">
        <%= f.email_field :email,label: false, :autofocus => true, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
       <%= f.label :password, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractéres mínimo)</em>
        <% end %>
        <%= f.password_field :password,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <div class="form-group">
       <%= f.label :password_confirmation, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <%= f.password_field :password_confirmation,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <div class="actions">
      <%= f.submit "Enviar", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
