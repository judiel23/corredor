<div class="authform col-md-12">
  <div class="panel-heading">
    <h3>Actualizar Perfil<%# resource_name.to_s.humanize %></h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, :class => "control-label col-sm-3 without_border" %>
      <div class="col-md-7">
        <%= f.email_field :email,label: false, :autofocus => true, :class => "form-control", :readonly=>true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
         <div>Actualmente a la espera de confirmación para: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>  

    <div class="form-group">
       <%= f.label :password, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <%= f.password_field :password,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <div class="form-group">
       <%= f.label :password_confirmation, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <%= f.password_field :password_confirmation,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <div class="form-group">
       <%= f.label :current_password, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <%= f.password_field :current_password, label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    
    <div class="form-group">
      <div class="col-md-10">
       <%= f.submit "Modificar", :class => 'btn btn-primary pull-right' %>
       <%= link_to "Atrás", :back, :class => "btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>

  <div class="panel-footer text-center">
    <h3>Cancelar Cuenta</h3>
    <%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Esta Ud. Seguro(a)?" }, method: :delete, :class => "btn btn-danger" %>
  </div>
  
</div>