<div class="authform col-md-12 text-center">
  <div style="padding: 15px;">
    <%= image_tag("logojohan.jpg") %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  
    <div class="form-group">
      <%= f.label :email, :class => "control-label col-sm-3 without_border" %>
      <div class="col-md-7">
        <%= f.email_field :email,label: false, :autofocus => true, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
       <%= f.label :password, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-7">
        <%= f.password_field :password,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar SesiÃ³n", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

