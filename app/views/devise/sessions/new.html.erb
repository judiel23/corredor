<div class="container" align="center">
  <div style="padding: 15px;">
  <img src="<%= image_url 'logojohan.jpg' %>" alt="Johan Leal - Corredor de Seguros" width = "30%" class="img-responsive">
  </div>

    <div class="col-md-3"></div>
    <div class="col-md-6">

      <section class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role:"login"  }) do |f| %>

    <div class="form-group">
      <%= f.label :email, :class => "control-label col-sm-3 without_border" %>
      <div class="col-md-6">
        <%= f.email_field :email,label: false, :autofocus => true, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
       <%= f.label :password, :class => "control-label col-sm-3 without_border" %>
       <div class="col-md-6">
        <%= f.password_field :password,label: false, :class => "form-control", autocomplete: "off" %>
       </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%><!--fin del if-->

    <div class="actions">
      <%= f.submit "Iniciar SesiÃ³n", :class => "btn btn-primary" %>
      <br>
      <%= render "devise/shared/links" %>
    </div>

  <% end %><!--fin del form-->
    </div>

      </section>
 </div>

</div>

