<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" style="padding-bottom: 25px;">
      <div class="col-md-1"></div>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}", :class => "col-md-10" %>
    </div>
  <% end %>
<% end %>